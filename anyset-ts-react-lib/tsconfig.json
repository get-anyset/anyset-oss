{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true, // Keep this true
    // "noEmit": true, // Remove or comment out this line
    "emitDeclarationOnly": true, // Emit only declaration files, Rsbuild handles JS/CSS
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    /* Library specific */
    "declaration": true,
    "declarationDir": "./dist/types", // Or just "dist/types" if outDir is "dist"
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "./dist", // Rsbuild uses this as a reference for structure
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }] // For rsbuild.config.ts if needed
}
